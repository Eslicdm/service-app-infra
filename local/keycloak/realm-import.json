{
  "realm": "service-app-realm",
  "enabled": true,
  "displayName": "Service App",
  "loginTheme": "keycloak",
  "accessTokenLifespan": 300,
  "ssoSessionIdleTimeout": 1800,
  "ssoSessionMaxLifespan": 36000,
  "accessTokenLifespanForImplicitFlow": 900,
  "users": [
    {
      "username": "admin",
      "enabled": true,
      "emailVerified": true,
      "email": "admin@serviceapp.com",
      "firstName": "Admin",
      "lastName": "User",
      "credentials": [
        {
          "type": "password",
          "value": "${REALM_ADMIN_PASSWORD}",
          "temporary": false
        }
      ],
      "realmRoles": ["admin", "manager"]
    },
    {
      "username": "manager",
      "enabled": true,
      "emailVerified": true,
      "email": "manager@serviceapp.com",
      "firstName": "Manager",
      "lastName": "User",
      "credentials": [
        {
          "type": "password",
          "value": "${REALM_MANAGER_PASSWORD}",
          "temporary": false
        }
      ],
      "realmRoles": ["manager"]
    },
    {
      "username": "member",
      "enabled": true,
      "emailVerified": true,
      "email": "member@serviceapp.com",
      "firstName": "Member",
      "lastName": "User",
      "credentials": [
        {
          "type": "password",
          "value": "${REALM_MEMBER_PASSWORD}",
          "temporary": false
        }
      ],
      "realmRoles": ["member"]
    }
  ],
  "roles": {
    "realm": [
      {
        "name": "admin",
        "description": "Administrator with full access"
      },
      {
        "name": "manager",
        "description": "Manager who can manage members"
      },
      {
        "name": "member",
        "description": "Basic member access"
      }
    ]
  },
  "clients": [
    {
      "clientId": "service-app-angular",
      "name": "Service App Web Angular",
      "enabled": true,
      "publicClient": true,
      "directAccessGrantsEnabled": false,
      "standardFlowEnabled": true,
      "implicitFlowEnabled": false,
      "redirectUris": [
        "http://localhost:4200/*"
      ],
      "webOrigins": [
        "http://localhost:4200"
      ],
      "defaultClientScopes": [
        "web-origins",
        "acr",
        "profile",
        "roles",
        "email"
      ]
    },
    {
      "clientId": "service-app-gateway",
      "name": "Service App API Gateway",
      "enabled": true,
      "publicClient": false,
      "bearerOnly": true,
      "serviceAccountsEnabled": true,
      "standardFlowEnabled": false,
      "directAccessGrantsEnabled": false
    },
    {
      "clientId": "member-service",
      "name": "Member Service Backend",
      "enabled": true,
      "publicClient": false,
      "bearerOnly": true,
      "serviceAccountsEnabled": true,
      "standardFlowEnabled": false,
      "directAccessGrantsEnabled": false
    },
    {
      "clientId": "pricing-service",
      "name": "Pricing Service Backend",
      "enabled": true,
      "publicClient": false,
      "bearerOnly": true,
      "serviceAccountsEnabled": true,
      "standardFlowEnabled": false,
      "directAccessGrantsEnabled": false
    }
  ]
}